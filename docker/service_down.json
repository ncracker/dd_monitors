{
	"name": "Docker daemon service issue on {{host.name}}",
	"type": "service check",
	"query": "\"docker.service_up\".over(\"*\").by(\"host\").last(2).count_by_status()",
	"message": "Please investigate docker daemon on {{host.name}} - {{host.ip}}\nUnable to run scheduled `docker ps` ",
	"tags": [],
	"options": {
		"notify_audit": false,
		"locked": false,
		"timeout_h": 0,
		"silenced": {},
		"include_tags": true,
		"new_host_delay": 300,
		"notify_no_data": false,
		"renotify_interval": 0,
		"no_data_timeframe": 2,
		"thresholds": {
			"critical": 1,
			"warning": 1,
			"ok": 1
		}
	}
}
